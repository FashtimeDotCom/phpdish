{% extends "PHPDishAdminBundle::layout.html.twig" %}

{% block body %}
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">新增文章</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                {{ form_start(form) }}
                {{ form_errors(form) }}
                    <div class="box-body">
                        <div class="form-group">
                            {{ form_label(form.title) }}
                            {{ form_errors(form.title) }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.original_body) }}
                            {{ form_errors(form.original_body) }}
                            {{ form_widget(form.original_body, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="box-footer">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}