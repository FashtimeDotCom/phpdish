{% extends 'PHPDishWebBundle::layout.html.twig' %}

{% block title %}写文章{% endblock %}

{% block script %}
<script type="text/javascript" src="{{ asset('build/js/post.js') }}"></script>
{% endblock %}

{% block content %}
<div id="main" class="container">
    <div class="row">
        <article id="content" class="single col-md-12">
            <div class="entry-content panel-box">
                {{ form_start(form, {'attr': {'class': 'form-horizontal', 'id': 'add-post-form'}}) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.title) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.originalBody, {'attr': {
                        'class': 'form-control',
                        'rows': 20,
                        'cols': 50,
                        'style': "overflow:hidden",
                        'placeholder': "请使用 Markdown 格式书写 ;-)，代码片段黏贴时请注意使用高亮语法。" }}
                    ) }}
                    {{ form_errors(form.originalBody) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.originalBody) }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">发布</button>
                </div>
                {{ form_end(form) }}
            </div>
        </article>
    </div>
</div>
{% endblock %}