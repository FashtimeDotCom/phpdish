{% extends 'PHPDishWebBundle:Common:notification_layout.html.twig' %}

{% block notification_content %}
    <div class="panel panel-u">
        <div class="panel-heading">收件箱</div>
        <ul class="list-group">
            {% for thread in threads %}
            <li class="list-group-item">
                <div class="media notification">
                    <div class="media-left">
                        <a href="{{ path('user_view', {username: thread.createdBy.username}) }}">
                            <img class="media-object avatar" src="{{ asset(thread.createdBy.avatar)|imagine_filter('middle_square') }}">
                        </a>
                    </div>
                    <div class="media-body">
                        <div class="media-heading">{{ thread.createdBy.username }}</div>
                        <div>
                            {{ thread.lastMessage.body }}
                        </div>
                    </div>
                </div>
            </li>
            {% else %}
                <li class="list-group-item empty-data">
                    <i class="if i-envelope"></i> 还没有私信哟
                </li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}
