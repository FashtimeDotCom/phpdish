{% extends 'PHPDishWebBundle:Common:notification_layout.html.twig' %}

{% block title %} 已发送 {% endblock %}

{% block notification_content %}
    <div class="panel panel-u">
        <div class="panel-heading">已发送</div>
        {% include 'PHPDishWebBundle:Chat:thread_list.html.twig' with {'threads': threads} %}
        {% if threads.haveToPaginate %}
            <footer class="panel-footer">
                {% from 'PHPDishWebBundle:Macros:paginator.html.twig' import paginator %}
                {{ paginator(threads) }}
            </footer>
        {% endif %}
    </div>
{% endblock %}
