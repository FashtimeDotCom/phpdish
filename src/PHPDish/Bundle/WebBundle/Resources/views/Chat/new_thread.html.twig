{% extends 'PHPDishWebBundle:Common:notification_layout.html.twig' %}

{% block title %} 发消息 {% endblock %}

{% block notification_content %}
    <div class="panel panel-u">
        <div class="panel-heading">发消息</div>
        <div class="panel-body">
            <form action="{{ url('fos_message_thread_new') }}" method="post">
                <div class="form-group">
                    {{ form_widget(form.recipient, {'attr': {'class': 'form-control', 'placeholder': '收信人'}}) }}
                    {{ form_errors(form.recipient) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.subject, {'attr': {'class': 'form-control', 'placeholder': '话题'}}) }}
                    {{ form_errors(form.subject) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.body, {'attr': {'class': 'form-control', 'placeholder': '消息内容'}}) }}
                    {{ form_errors(form.body) }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn u-btn-primary submit-btn"><i class="if i-publish"></i> 发布</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
