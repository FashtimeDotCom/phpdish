{% extends 'PHPDishWebBundle::layout.html.twig' %}

{% block title %} {{ topic.title }} {% endblock %}

{% block script %}
    <script type="text/javascript" src="{{ asset('build/js/topic.js') }}"></script>
    <script type="text/javascript">
        window.topicId = {{ topic.id }};
    </script>
{% endblock %}

{% block content %}
    <div class="container" role="main">
        <div class="row">
            <div class="col-md-9">
                <div class="panel panel-default panel-u topic-view">
                    <div class="panel-heading clearfix">
                        <div class="author">
                            <a href="{{ path('user_view', {'username': topic.user.username}) }}"><img src="{{ topic.user.avatar }}" class="avatar"/></a>
                        </div>
                        <div class="title"><h3>{{ topic.title }}</h3></div>
                        <div class="summary">
                            <ul class="list-unstyled list-inline">
                                <li class="text-muted"><i class="if i-calendar"></i> {{ topic.createdAt|date('Y-m-d') }}</li>
                                <li class="text-muted"><i class="if i-user"></i> {{ topic.user.username }}</li>
                                <li class="text-muted"><i class="if i-comment"></i> <a href="#add-reply-form"  data-action="go-reply">{{ topic.replyCount }}回复</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel-body">
                        <article class="body markdown-body">{{ topic.body|raw }}</article>
                    </div>
                </div>
                <div class="panel panel-default panel-u">
                    <div class="panel-heading"><h5>{{ replies.count }}个回复</h5></div>
                    <ul class="list-group reply-list" data-role="replies-panel">
                        {% include 'PHPDishWebBundle:Common:reply_list.html.twig'%}
                    </ul>
                    {% if replies.haveToPaginate %}
                    <div class="panel-footer">
                        {{ pagerfanta(replies, 'twitter_bootstrap3') }}
                    </div>
                    {% endif %}
                </div>
                <div class="panel panel-default panel-u reply-topic">
                    <div class="panel-heading"><h4>回复</h4></div>
                    <form id="add-reply-form" class="form-panel">
                        <div class="panel-body">
                            {% include 'PHPDishWebBundle:Common:md_editor.html.twig' %}
                            <div class="form-actions"><button type="submit" class="btn u-btn-primary">回复</button></div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-3">
                {% include 'PHPDishWebBundle:User:user_plate.html.twig' %}
                {{ render(controller('PHPDishForumBundle:Topic:todayHotTopics')) }}
            </div>
            <!-- #sidebar -->
        </div>
    </div>
{% endblock %}