{% extends 'PHPDishWebBundle::layout.html.twig' %}

{% block title %}话题{% endblock %}

{% block script %}
    <script type="text/javascript" src="{{ asset('build/js/topic.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="container" role="main">
        <div class="row">
            <div class="col-md-9">
                <div class="panel panel-u">
                    <ul class="list-unstyled list-inline tab-nav" data-pjax-container="list-container">
                        {% set tab = app.request.query.get('tab') %}
                        <li {% if not tab%}class="active"{% endif %}><a href="{{ path('homepage') }}">看帖</a></li>
                        <li {% if tab == 'recommend' %}class="active"{% endif %}><a href="{{ path('homepage', {'tab': 'recommend'}) }}">推荐</a></li>
                    </ul>
                    <div id="list-container">
                        <div class="panel-body topic-list">
                            {% for topic in topics %}
                                <div class="media topic">
                                    <div class="media-left">
                                        <a href="{{ path('user_view', {'username': topic.user.username}) }}">
                                            {% set runtimeConfig = {"thumbnail": {"size": [50, 50] }} %}
                                            <img src="{{ asset(topic.user.avatar)|imagine_filter('middle_square') }}" class="media-object avatar" role="avatar">
                                        </a>
                                    </div>
                                    <div class="media-body">
                                        <div class="media-heading title">
                                            <a href="{{ path('topic_view', {'id': topic.id}) }}">{{ topic.title }}</a>
                                            {% if topic.recommended %}
                                                <i class="if i-badge"></i>
                                            {% endif %}
                                        </div>
                                        <ul class="list-inline list-unstyled meta">
                                            <li>{{ topic.user.username }} 发起于 {{ topic.createdAt|time_diff }}</li>
                                            <li><a href="{{ path('thread_view', {'slug': topic.thread.slug}) }}">{{ topic.thread.name }}</a></li>
                                            <li>最后回复：{{ topic.repliedAt|time_diff }}</li>
                                        </ul>
                                    </div>
                                </div>
                                {% if not loop.last %}
                                    <hr class="margin-vertical-10"/>
                                {% endif %}
                            {% else %}
                                <div class="empty-data">
                                    <p><i class="if i-comment"></i> 没有话题</p>
                                </div>
                            {% endfor %}
                        </div>
                        {% if topics.haveToPaginate %}
                            <div class="panel-footer">
                                {{ pagerfanta(topics, 'twitter_bootstrap3') }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                {% include 'PHPDishWebBundle:User:user_plate.html.twig' %}
                {{ render(controller('PHPDishForumBundle:Topic:todayHotTopics')) }}
                {{ render(controller('PHPDishUserBundle:User:latestUsers', {'limit': 10})) }}
                {% include 'PHPDishWebBundle:Common:friend_community.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}