{% extends 'PHPDishWebBundle::layout.html.twig' %}

{% block title %}找回密码{% endblock %}

{% block script %}
    <script type="text/javascript" src="{{ asset('build/js/sign.js') }}"></script>
{% endblock %}


{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-md-6 col-md-offset-3 col-sm-offset-2">
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="reg-page">
                    <div class="reg-header">
                        <h2>找回密码</h2>
                    </div>

                    {% from 'PHPDishWebBundle:Macros:notification.html.twig' import flashes %}
                    {{ flashes() }}

                    <div class="group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="if i-user"></i></span>
                            <input type="text" class="form-control" id="username" name="username" placeholder="用户名或者邮箱"/>
                        </div>
                    </div>
                    <div class="group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="if i-captcha"></i></span>
                            <input type="text" class="form-control" id="username" name="username" placeholder="验证码"/>
                        </div>
                    </div>
                    <div class="group">
                        {% set captchaUrl = path('gregwar_captcha.generate_captcha', {'key': 'resetting'})  %}
                        <img src="{{ captchaUrl }}" onclick="this.src='{{ captchaUrl }}?'+Math.random()"/>
                    </div>

                    <button class="btn btn-md u-btn-primary btn-block" type="submit">提交</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}