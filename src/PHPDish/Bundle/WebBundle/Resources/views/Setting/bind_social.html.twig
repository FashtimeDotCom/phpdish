{% extends 'PHPDishWebBundle:Common:setting_layout.html.twig' %}

{% block title %} 社交账户 {% endblock %}
{% block script %}
    <script type="text/javascript" src="{{ asset('build/js/setting.js') }}"></script>
{% endblock %}

{% block setting_content %}

    <div class="panel panel-u">
        <div class="panel-heading">社交账户 </div>
        <ul class="list-group social-connection">
            <li class="list-group-item">
                <span class="if i-qq"></span>

                {% if app.user.qqId %}
                    已绑定 <i class="if i-check"></i>
                {% else %}
                    <a href="{{ hwi_oauth_login_url('qq') }}">绑定QQ</a>
                {% endif %}
            </li>
            <li class="list-group-item">
                <span class="if i-weibo"></span>

                {% if app.user.weiboId %}
                     已绑定 <i class="if i-check"></i>
                {% else %}
                    <a href="{{ hwi_oauth_login_url('weibo') }}">绑定微博</a>
                {% endif %}
            </li>
            <li class="list-group-item">
                <span class="if i-github"></span>

                {% if app.user.githubId %}
                     已绑定 <i  class="if i-check"></i>
                {% else %}
                    <a href="{{ hwi_oauth_login_url('github') }}">绑定GitHub</a>
                {% endif %}
            </li>
        </ul>
    </div>

{% endblock %}