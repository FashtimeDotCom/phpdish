{% for user in users %}
    <div class="media user">
        <div class="media-left">
            {% set userHomeUrl = path('user_view', {'username': user.username}) %}
            <a href="{{ userHomeUrl  }}">
                <img src="{{ user.avatar() }}" class="media-object avatar">
            </a>
        </div>
        <div class="media-body">
            <div class="action pull-right" data-role="follow" data-username="{{ user.username }}">
                {% if (app.user and user.isFollowedBy(app.user)) %}
                    <button class="btn btn-sm btn-default" data-action="unfollow-user">已关注</button>
                {% else %}
                    <button class="btn u-btn btn-sm u-btn-orange" data-action="follow-user"><i class="if i-plus"></i>关注</button>
                {% endif %}
            </div>
            <div class="title"><a href="{{ userHomeUrl }}">{{ user.username }}</a></div>
            <div class="description">{{ user.description }}</div>
            <div class="meta">
                <ul class="list-unstyled list-inline">
                    <li>{{ user.followingCount }}关注</li>
                    <li>{{ user.followerCount }}粉丝</li>
                </ul>
            </div>
        </div>
    </div>
{% endfor %}